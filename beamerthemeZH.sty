% !!! This environment can't both have nice margins AND display the contained text as justified:
% We preferentially use the above but keep this one just-in-case
\setbeamertemplate{block begin}{
	\setlength{\mylength}{\textwidth}%
	\vskip2ex
	\begin{beamercolorbox}[ht=3.2ex,dp=2ex, wd=\mylength, center,rounded=false,shadow=false,leftskip=1cm,colsep*=0ex]{block title}%
      \usebeamerfont*{block title}\centering\titlefont\Large{\insertblocktitle}
	\end{beamercolorbox}\vskip-9pt%
	{\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5ex}}%
	\usebeamerfont{block body}%
	\begin{beamercolorbox}[rounded=false,shadow=false,center,wd=\textwidth,]{block body}%
		\ifbeamercolorempty[bg]{block body}\vbox{}%
		\begin{minipage}{0.96\textwidth}\vbox{}%
		\justify
		}
\setbeamertemplate{block end}{
	\end{minipage}
	\end{beamercolorbox}
	}

  
\setbeamertemplate{abstract begin}{
	\setlength{\mylength}{\textwidth}%
	\vskip2ex
	\begin{beamercolorbox}[ht=0ex,dp=2ex, wd=\mylength, center,rounded=false,shadow=false,leftskip=1cm,colsep*=0ex]{abstract body}%
      \usebeamerfont*{abstract body}{}
	\end{beamercolorbox}\vskip-9pt%
	{\ifbeamercolorempty[bg]{abstract body}{}{\nointerlineskip\vskip-0.5ex}}%
	\usebeamerfont{abstract body}%
	\begin{beamercolorbox}[rounded=false,shadow=false,center,wd=\textwidth]{abstract body}%
		\ifbeamercolorempty[bg]{abstract body}\vbox{}%
		\begin{minipage}{0.96\textwidth}\vbox{}%
		\justify
		}
\setbeamertemplate{abstract end}{
	\end{minipage}
	\end{beamercolorbox}
	}


